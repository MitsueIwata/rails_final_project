<h1>Communities</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Organizer</th>
      <th>Category</th>
      <th>Location</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @community.each do |comm| %>

    <% user = User.find_by(id: comm.organizer) %>
      <tr>
        <td><%= comm.comm_name %></td>
        <td><%= user.username %></td>
        <td><%= comm.comm_category %></td>
        <td><%= comm.location %></td>
      </tr>
    <% end %>
  </tbody>
</table>

